extends layout

block styles
  link(rel="stylesheet", href="/assets/css/book-ticket.css")

block content
  .background-section
    h1.book-title Event Booking

    .booking-form
      form(action="/submit-booking", method="POST")
        .form-group
          label(for="name") Name:
          input(type="text", id="name", name="name", placeholder="Enter your name", required)

        .form-group
          label(for="email") Email:
          input(type="email", id="email", name="email", placeholder="Enter your email", required)

        .form-group
          label(for="phone") Phone:
          input(type="tel", id="phone", name="phone", placeholder="Enter your phone number", required)

        // Button
        button.auth-button(type="submit") Book Now

  // Background Image Script
  script.
    document.addEventListener('DOMContentLoaded', function() {
      const eventImage = localStorage.getItem('eventImage');
      if (eventImage) {
        document.body.style.backgroundImage = `url(${eventImage})`;
        document.body.style.backgroundSize = 'cover';
        document.body.style.backgroundPosition = 'center';
        document.body.style.backgroundRepeat = 'no-repeat';
        document.body.style.height = '100vh';
      }
    });
