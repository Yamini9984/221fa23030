block styles
  link(rel="stylesheet", href="/assets/css/event-details.css")

block content
  main
    section.event-details
      h2#event-title Event Details
      .event-details-grid
        .event-detail-item
          i.fas.fa-calendar-alt
          .event-detail-content
            h3 When
            p#event-date September 22, 2024 | 11am-5pm
        .event-detail-item
          i.fas.fa-ticket-alt
          .event-detail-content
            h3 Entry
            p#event-entry Free with College ID
        .event-detail-item
          i.fas.fa-map-marker-alt
          .event-detail-content
            h3 Where
            p#event-location Citizens House of Blues Boston, 15 Lansdowne St, Boston, MA 02215
        .event-detail-item
          i.fas.fa-map-signs
          .event-detail-content
            h3 Directions
            p Directions coming soon. Using the T: Coming Soon
        .event-detail-item
          i.fas.fa-mobile-alt
          .event-detail-content
            h3 What to Bring
            p Your college ID, energy to carry FREE stuff & your phone to capture and share your day.

      // Book Now Button
      .book-now-button-container
        button#book-button.book-button Book Now

