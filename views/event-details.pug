  script.
    // Function to populate event details from localStorage
    window.onload = function () {
        const title = localStorage.getItem('eventTitle');
        const date = localStorage.getItem('eventDate');
        const entry = localStorage.getItem('eventEntry');
        const location = localStorage.getItem('eventLocation');

        // Update HTML elements with event details
        document.getElementById('event-title').textContent = title || 'Event Details';
        document.getElementById('event-date').textContent = date || 'Date not available';
        document.getElementById('event-entry').textContent = entry || 'Entry details not available';
        document.getElementById('event-location').textContent = location || 'Location not available';
    };

    // "Book Now" button redirect
    document.getElementById('book-button').onclick = function () {
        window.location.href = '/book-ticket';
    };
